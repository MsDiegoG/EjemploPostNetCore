
<h1 style="text-align: center">Ejemplo de subida de archivos vía formulario</h1>

<br />

<form method="post" enctype="multipart/form-data" style="margin: 0 auto">
    <div class="form-group">
        <label for="ejemplo">Escoja el archivo</label>
        <input type="file" class="form-control-file" name="imagen" id="ejemplo">
        <label for="ejemplo">Carpeta donde ubicarlo</label>
        <select name="ubicacion">
            <option value="1">Imágenes</option>
            <option value="2">Documentos</option>
            <option value="0">Descargas</option>
            <option value="3">Temporal</option>
        </select>
        <br />
        <button type="submit" class="btn btn-info">
            Subir
        </button>
    </div>
</form>

<br />

<h2 style="color:blue; text-align: center">
    @ViewBag.Mensaje
</h2>